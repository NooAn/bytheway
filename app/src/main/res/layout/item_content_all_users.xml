<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/standard_margin">

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="@dimen/size_user_avatar"
            android:layout_height="@dimen/size_user_avatar"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/name_content_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standard_margin"
            android:textColor="@color/black"
            android:textSize="@dimen/item_all_users_main_text"
            app:layout_constraintStart_toEndOf="@id/user_avatar"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Николаев Алексей" />

        <TextView
            android:id="@+id/age_content_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black"
            android:textSize="@dimen/item_all_users_main_text"
            app:layout_constraintBottom_toTopOf="@+id/users_cities"
            app:layout_constraintStart_toEndOf="@id/name_content_user"
            app:layout_constraintTop_toTopOf="@+id/name_content_user"
            tools:text=", 16" />

        <TextView
            android:id="@+id/users_cities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_cities"
            android:textColor="@color/black"
            android:textSize="@dimen/item_all_users_subsidiary_text"
            app:layout_constraintBottom_toBottomOf="@+id/user_avatar"
            app:layout_constraintStart_toStartOf="@id/name_content_user"
            app:layout_constraintTop_toBottomOf="@+id/name_content_user" />

        <TextView
            android:id="@+id/users_dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_all_users_empty_date"
            android:textColor="@color/colorPrimaryTeams"
            android:textSize="@dimen/item_all_users_subsidiary_text"
            app:layout_constraintStart_toStartOf="@id/name_content_user"
            app:layout_constraintTop_toBottomOf="@+id/users_cities"
            tools:text="@string/date" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
