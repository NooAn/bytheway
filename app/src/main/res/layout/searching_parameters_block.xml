<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/start_date_parameter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="17dp"
        android:text="start Date" />

    <Button
        android:id="@+id/end_date_parameter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/start_date_parameter"
        android:text="end Date" />

    <EditText
        android:id="@+id/start_budget_parameter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_date_parameter"
        android:layout_marginEnd="17dp"
        android:hint="start budget"
        android:inputType="number" />


    <EditText
        android:id="@+id/end_budget_parameter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_date_parameter"
        android:layout_toEndOf="@+id/start_budget_parameter"
        android:hint="end budget"
        android:inputType="number" />

    <EditText
        android:id="@+id/start_age_parameter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_budget_parameter"
        android:layout_marginEnd="17dp"
        android:hint="start Age"
        android:inputType="number" />


    <EditText
        android:id="@+id/end_age_parameter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_budget_parameter"
        android:layout_toEndOf="@+id/start_age_parameter"
        android:hint="end age"
        android:inputType="number" />

    <EditText
        android:id="@+id/start_city_parameter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_age_parameter"
        android:layout_marginEnd="17dp"
        android:hint="start city" />


    <EditText
        android:id="@+id/end_city_parameter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_age_parameter"
        android:layout_toEndOf="@+id/start_city_parameter"
        android:hint="end city" />

    <Button
        android:id="@+id/choose_sex_parameter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_city_parameter"
        android:text="sex" />

    <Button
        android:id="@+id/save_parameters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/choose_sex_parameter"
        android:text="save parameters" />


</RelativeLayout>