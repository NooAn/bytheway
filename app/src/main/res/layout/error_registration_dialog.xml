<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:text="@string/registration_error"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/textPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textError"
        android:padding="24dp"
        android:text="Давайте попробуем войти с помощью вашего номера телефона"
        android:textColor="@color/colorAccent" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textPhone"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:hint="Телефон" />

    <EditText
        android:id="@+id/textFromSms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:hint="sms code"
        android:visibility="invisible"
        tools:visibility="visible" />

    <Button
        android:id="@+id/sendButtonCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textFromSms"
        android:text="@string/button_send"
        android:theme="@style/WhiteButton"
        android:visibility="invisible"
        tools:visibility="visible" />

    <Button
        android:id="@+id/sendButtonPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sendButtonCode"
        android:text="Отправить телефон"
        android:theme="@style/WhiteButton" />

</LinearLayout>