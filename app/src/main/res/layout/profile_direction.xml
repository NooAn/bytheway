<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/travelledStatistics"
    android:background="@color/colorPrimary"
    android:paddingBottom="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/textCityFrom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="0dp"
            android:layout_weight=".22"
            android:backgroundTint="@color/hint"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"
            android:hint="@string/city_fromSmall"
            android:inputType="text"
            android:paddingBottom="13dp"
            android:singleLine="false"
            android:textAlignment="viewStart"
            android:textColor="@color/textColor"
            android:textColorHint="@color/hint"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:src="@drawable/ic_circles_dot"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/textCityTo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="0dp"
            android:layout_weight=".22"
            android:backgroundTint="@android:color/white"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"
            android:hint="@string/city_toSmall"
            android:inputType="text"
            android:paddingBottom="13dp"
            android:textColor="@color/textColor"
            android:textColorHint="@color/hint"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="50dp">

        <EditText
            android:id="@+id/textDateFrom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_weight=".22"
            android:backgroundTint="@color/hint"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"
            android:hint="@string/date_from"
            android:inputType="date"
            android:paddingBottom="13dp"
            android:paddingRight="4dp"
            android:textColor="@color/textColor"
            android:textColorHint="@color/hint"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_circles_dot"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent" />
        <EditText
            android:id="@+id/dateArrived"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="16dp"
            android:layout_weight=".22"
            android:backgroundTint="@color/hint"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"
            android:hint="@string/date_to"
            android:inputType="date"
            android:paddingBottom="13dp"
            android:textColor="@color/textColor"
            android:textColorHint="@color/hint"
            android:textSize="13sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>