<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:context="ru.a1024bits.bytheway.ui.fragments.UserProfileFragment">

        <include layout="@layout/profile_main_image" />

        <LinearLayout
            android:id="@+id/headerprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/profile_image"
            android:layout_marginTop="18dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="@string/fullname" />

            <TextView
                android:id="@+id/cityview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:freezesText="true"
                android:text="@string/city"
                android:textAlignment="center"
                android:textSize="16sp"
                tools:text="Москва, Россия" />

            <TextView
                android:id="@+id/sex_and_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:freezesText="true"
                android:text="@string/sex_and_age"
                android:textAlignment="center"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/socnetwork"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/headerprofile"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="44dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <ImageView
                tools:ignore="ContentDescription"
                android:id="@+id/vkIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="6dp"
                android:layout_marginStart="6dp"
                android:layout_weight="1.0"
                android:src="@drawable/ic_vk_gray"
                tools:src="@drawable/ic_vk_gray" />

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/colorAccent" />

            <ImageView
                tools:ignore="ContentDescription"
                android:id="@+id/whatsUpIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="6dp"
                android:layout_marginStart="6dp"
                android:layout_weight="1.0"
                android:src="@drawable/ic_whats_icon_grey"
                tools:src="@drawable/ic_whats_icon_color" />

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/colorAccent" />

            <ImageView
                tools:ignore="ContentDescription"
                android:id="@+id/tgIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="6dp"
                android:layout_marginStart="6dp"
                android:layout_weight="1.0"
                android:src="@drawable/tg_grey"
                android:visibility="visible"
                tools:src="@drawable/ic_tg_color" />

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/colorAccent" />

            <ImageView
                tools:ignore="ContentDescription"
                android:id="@+id/fbcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="6dp"
                android:layout_marginStart="6dp"
                android:layout_weight="1.0"
                android:src="@drawable/ic_fb_grey"
                tools:src="@drawable/ic_fb_color" />

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/colorAccent" />

            <ImageView
                tools:ignore="ContentDescription"
                android:id="@+id/csIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="6dp"
                android:layout_marginStart="6dp"
                android:layout_weight="1.0"
                android:src="@drawable/ic_cs_grey"
                tools:src="@drawable/ic_cs_color" />

        </LinearLayout>

        <include
            android:id="@+id/add_new_trip"
            layout="@layout/profile_add_trip"
            android:visibility="visible"
            tools:visibility="visible" />

        <include
            android:id="@+id/direction"
            layout="@layout/profile_direction"
            android:visibility="gone"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/maplayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/direction"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/method_moving"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/maplayout"
            android:layout_marginEnd="@dimen/margin_left_profile"
            android:layout_marginStart="@dimen/margin_left_profile"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/method_move"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_method_moving"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/method_moving"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="@dimen/margin_left_profile"
            android:layout_marginStart="@dimen/margin_left_profile"
            android:layout_marginTop="24dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                tools:ignore="ContentDescription"
                android:id="@+id/directions_car"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="6dp"
                android:layout_marginStart="6dp"
                android:layout_weight="1.0"
                android:src="@drawable/ic_directions_car_grey"
                tools:src="@drawable/ic_directions_car" />

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/gray" />

            <ImageView
                tools:ignore="ContentDescription"
                android:id="@+id/directions_railway"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="6dp"
                android:layout_marginStart="6dp"
                android:layout_weight="1.0"
                android:src="@drawable/ic_directions_railway_grey"
                tools:src="@drawable/ic_directions_railway" />

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/gray" />

            <ImageView
                tools:ignore="ContentDescription"
                android:id="@+id/directions_bus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="6dp"
                android:layout_marginStart="6dp"
                android:layout_weight="1.0"
                android:src="@drawable/ic_directions_bus_grey"
                tools:src="@drawable/ic_directions_bus" />

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/gray" />

            <ImageView
                tools:ignore="ContentDescription"
                android:id="@+id/directions_flight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="6dp"
                android:layout_marginStart="6dp"
                android:layout_weight="1.0"
                android:src="@drawable/ic_flight_grey"
                tools:src="@drawable/ic_flight" />

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/gray" />

            <ImageView
                tools:ignore="ContentDescription"
                android:id="@+id/csIcon1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="6dp"
                android:layout_marginStart="6dp"
                android:layout_weight="1.0"
                android:src="@drawable/ic_directions_hitchhiking_grey"
                tools:src="@drawable/ic_directions_hitchhiking" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/moneyfortrip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_method_moving"
            android:layout_marginEnd="@dimen/margin_left_profile"
            android:layout_marginStart="@dimen/margin_left_profile"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/money"
                android:textSize="16sp" />

            <SeekBar
                android:id="@+id/choose_price_travel"
                style="@style/Widget.AppCompat.SeekBar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="24dp"
                android:layout_weight="1"
                android:max="30"
                android:progress="50"
                android:progressTint="@color/colorPrimary"
                android:thumbTint="@color/colorPrimary" />

            <TextView
                android:id="@+id/display_price_travel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_left_profile"
                android:layout_marginTop="12dp"
                android:drawableStart="@drawable/ic_rubles"
                android:text="@string/budget"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/descriptionprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/moneyfortrip"
            android:layout_marginEnd="@dimen/margin_left_profile"
            android:layout_marginStart="@dimen/margin_left_profile"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/add_info_profile"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/add_info_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorPrimary"
                android:hint="@string/description"
                android:inputType="textMultiLine"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:id="@+id/button_save_travel_info"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/descriptionprofile"
            android:layout_marginEnd="19dp"
            android:layout_marginTop="12dp"
            android:padding="24dp"
            android:text="Сохранить"
            android:theme="@style/WhiteButton"
            android:visibility="gone"
            tools:visibility="visible" />

        <Button
            android:id="@+id/button_remove_travel_info"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/descriptionprofile"
            android:layout_marginEnd="19dp"
            android:layout_marginTop="12dp"
            android:padding="24dp"
            android:text="Удалить"
            android:theme="@style/WhiteButton"
            android:visibility="gone"
            tools:visibility="visible" />
    </RelativeLayout>


</ScrollView>