<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="listPreferredItemPaddingLeft">23dp</item>
        <item name="listPreferredItemPaddingRight">16dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WhiteButton" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="PrimaryButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="StyleLabelMenuActivity" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/font_menu_activity</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="UsersTextInFilters">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
    </style>

    <style name="BythewayDatePickerDialogTheme" parent="BetterPickersRadialTimePickerDialog.PrimaryColor">
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="bpBodyBackgroundColor">@color/white</item>
        <item name="bpBodySelectedTextColor">@color/colorPrimary</item>
        <item name="bpBodyUnselectedTextColor">@color/black</item>

        <item name="bpRadialBackgroundColor">@color/white</item>
        <item name="bpRadialTextColor">@color/colorPrimary</item>
        <item name="bpRadialPointerColor">@android:color/black</item>

        <item name="bpButtonsBackgroundColor">@color/white</item>
        <item name="bpButtonsTextColor">@color/colorPrimary</item>
        <item name="bpDialogBackground">@color/white</item>
        <item name="bpTextColor">@color/black</item>
        <item name="bpTitleColor">@color/white</item>
        <item name="bpDividerColor">@color/white</item>
        <item name="bpKeyboardIndicatorColor">#dcdcdc</item>
        <item name="bpAmPmCircleColor">@color/colorPrimary</item>
        <item name="bpDisabledDayTextColor">#f5f5f5</item>

        <!-- for custom datepicker pre-Lollipop -->
        <item name="bpPreHeaderBackgroundColor">@color/colorPrimary</item>
        <item name="bpHeaderBackgroundColor">@color/colorPrimary</item>
        <item name="bpHeaderSelectedTextColor">@color/white</item>
        <item name="bpHeaderUnselectedTextColor">#a5a5a5</item>
    </style>
</resources>
